<%= form_for @recipe do |f| %>
  Title: <%= f.text_field :title %>

  <%= f.fields_for :ingredients do |i| %>
    <%= i.label :name %>
   Name: <%= i.text_field :name %> <br>

    <%= i.label :quantity %>
   Quantity: <%= i.text_field :quantity %> <br>
  <% end %>

    <%= link_to 'add ingredient', @recipe %>

  <%= f.submit %>
<% end %>